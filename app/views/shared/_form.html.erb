<div class="center">

<div class='form'>
<%= simple_form_for(@table) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
      <%=f.label "Artiste"  %> <br>
    <%= f.association :user, legend_tag: false,
    :label_method => lambda { |user| "#{user.last_name} #{user.first_name}" },
    as: :radio_buttons
    %>
    <%= f.input :price %>
  <%=f.label "Photo"  %>
    <%= f.input :photo, as: :file,
    label: false %>
  </div>
  <br><br>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>
</div>
</div>
